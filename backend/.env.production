# 生产环境配置
NODE_ENV=production
PORT=8000

# 数据库配置 (Zeabur会自动注入)
DATABASE_URL=${DATABASE_URL}

# Redis配置 (可选，Zeabur会自动注入)
REDIS_URL=${REDIS_URL}

# JWT配置
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# OpenAI配置 (需要在Zeabur环境变量中设置)
OPENAI_API_KEY=${OPENAI_API_KEY}

# DeepSeek配置 (需要在Zeabur环境变量中设置)
DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS配置
CORS_ORIGIN=${CORS_ORIGIN}

# 日志配置
LOG_LEVEL=info
